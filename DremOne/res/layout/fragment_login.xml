<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal" >

    <LinearLayout
        android:id="@+id/title_timu_tui"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image_button_left"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:paddingLeft="10dp"
            android:src="@drawable/umeng_socialize_action_back_selected" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="登	录"
            android:textSize="16sp" >
        </TextView>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scorllview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_timu_tui"
        android:paddingLeft="0.0dip"
        android:paddingRight="0.0dip"
        android:scrollbars="none" >

        <RelativeLayout
            android:id="@+id/ly_top"
            android:layout_width="fill_parent"
            android:layout_height="400.0dip" >

            <LinearLayout
                android:id="@+id/input_layout"
                android:layout_width="fill_parent"
                android:layout_height="140.0dip"
                android:layout_centerHorizontal="true"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/focus"
                    android:layout_width="0.0dip"
                    android:layout_height="0.0dip"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal" />

                <RelativeLayout
                    android:id="@+id/input_layout_username"
                    android:layout_width="fill_parent"
                    android:layout_height="70.0dip" >

                    <ImageView
                        android:id="@+id/login_user_image"
                        android:layout_width="18dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="31.0dip"
                        android:layout_marginTop="30.0dip"
                        android:background="@drawable/ic_login_user_sel" />

                    <EditText
                        android:id="@+id/login_user"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="20.0dip"
                        android:layout_marginRight="5.0dip"
                        android:layout_toRightOf="@id/login_user_image"
                        android:hint="用户名"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:maxLength="64"
                        android:singleLine="true"
                        android:textColor="#ff5e5e5e"
                        android:textColorHint="#ffa9a9a9"
                        android:text="19280013800"
                        android:textSize="16.0sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="70.0dip" >

                    <ImageView
                        android:id="@+id/login_passwd_image"
                        android:layout_width="18dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="31.0dip"
                        android:layout_marginTop="30.0dip"
                        android:background="@drawable/bg_login_pass" />

                    <EditText
                        android:id="@+id/login_passwd"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="20.0dip"
                        android:layout_marginRight="5.0dip"
                        android:layout_toRightOf="@id/login_passwd_image"
                        android:drawablePadding="3.0dip"
                        android:hint="密码"
                        android:password="true"
                        android:singleLine="true"
                        android:textColor="#ff5e5e5e"
                        android:textColorHint="#ffa9a9a9"
                        android:textSize="16.0sp" />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/login_confirm"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@id/input_layout"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_marginTop="10.0dp"
                android:background="@drawable/bg_confirm_button"
                android:text="登录"
                android:textColor="#ffffffff" />

            <TextView
                android:id="@+id/login_forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_confirm"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="22.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="22.0dip"
                android:text="没有账号？快速注册极客学院"
                android:textColor="#ffa9a9a9"
                android:textSize="17.0sp" />

            <Button
                android:id="@+id/qq_login"
                android:layout_width="107dp"
                android:layout_height="91dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/login_forward"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10.0dip"
                android:background="@drawable/bg_qqlogin_button" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>