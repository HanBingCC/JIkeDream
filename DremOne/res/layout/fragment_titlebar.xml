<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_title"
    android:layout_width="fill_parent"
    android:layout_height="56.0dip"
    android:background="@drawable/bg_nav_top" >

    <ImageView
        android:id="@+id/home_title_left"
        android:layout_width="56.0dip"
        android:layout_height="56.0dip"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_slider" />

    <ImageView
        android:id="@+id/home_title_right"
        android:layout_width="56.0dip"
        android:layout_height="56.0dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_search" />

    <ImageView
        android:id="@+id/home_title_middle"
        android:layout_width="56.0dip"
        android:layout_height="56.0dip"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_mainmenu_logo"
        android:scaleType="centerCrop" />

</RelativeLayout>